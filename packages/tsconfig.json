{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noUnusedParameters": false,
        "paths": {
            "@orbstation/app": [
                "orb-app/src"
            ],
            "@orbstation/app/*": [
                "orb-app/src/*"
            ],
            "@orbstation/app-model-couchdb": [
                "orb-app-model-couchdb/src"
            ],
            "@orbstation/app-model-couchdb/*": [
                "orb-app-model-couchdb/src/*"
            ],
            "@orbstation/app-model-lowdb": [
                "orb-app-model-lowdb/src"
            ],
            "@orbstation/app-model-lowdb/*": [
                "orb-app-model-lowdb/src/*"
            ],
            "@orbstation/route": [
                "orb-route/src"
            ],
            "@orbstation/route/*": [
                "orb-route/src/*"
            ],
            "@orbstation/oas": [
                "orb-oas/src"
            ],
            "@orbstation/oas/*": [
                "orb-oas/src/*"
            ],
            "@orbstation/command": [
                "orb-command/src"
            ],
            "@orbstation/command/*": [
                "orb-command/src/*"
            ],
            "@orbstation/service": [
                "orb-service/src"
            ],
            "@orbstation/service/*": [
                "orb-service/src/*"
            ],
            "@orbstation/cling": [
                "orb-cling/src"
            ],
            "@orbstation/cling/*": [
                "orb-cling/src/*"
            ],
            "@bemit/schema": [
                "schema-lib/src"
            ],
            "@bemit/schema/*": [
                "schema-lib/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
